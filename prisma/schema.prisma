// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output = "./generated"
}

datasource db {
  provider = "postgresql"
}

// ------------
// User
// ------------

enum UserRole {
  ADMIN
  USER
  SALES
  EMPLOYEE
  NONE
}

model User {
  id                        String                    @id @default(uuid())
  createdAt                 DateTime                  @default(now())
  updatedAt                 DateTime                  @updatedAt
  email                     String                    @unique
  displayName               String?
  role                      UserRole                  @default(ADMIN)
  publicKey                 String                    @default(uuid())
  publicSecret              String                    @default(uuid())
  timeTrackingActivities    TimeTrackingActivity[]
  userTokens                UserToken[]
  tasks                     Task[]
  leadOwners                Lead[]
  opportunityOwners         Opportunity[]
  quoteOwners               Quote[]
}

model UserToken {
  id                        String                    @id @default(uuid())
  createdAt                 DateTime                  @default(now())
  updatedAt                 DateTime                  @updatedAt
  name                      String?
  userId                    String
  user                      User                      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ------------
// Options
// ------------

enum OptionKey {
  CUSTOMER_ID_COUNTER
  CUSTOMER_ID_SCHEMA
  QUOTE_ID_COUNTER
  QUOTE_ID_SCHEMA
  QUOTE_DEFAULT_TITLE
  QUOTE_DEFAULT_INTRO_TEXT
  QUOTE_DEFAULT_OUTRO_TEXT
  SYSTEM_CURRENCY
  SYSTEM_UNITS
  SYSTEM_TAX_RATES
  COMPANY_INFO
}

model Option {
  key         OptionKey   @id
  value       Json        @default("{}")
  public      Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// ------------
// Contact & Company
// ------------

enum ContactGender {
  MALE
  FEMALE
  DIVERSE
  NONE
}

model Person {
  id                          String                    @id @default(uuid())
  createdAt                   DateTime                  @default(now())
  updatedAt                   DateTime                  @updatedAt
  externalId                  String?
  firstname                   String?
  surename                    String?
  familyname                  String?
  gender                      ContactGender             @default(NONE)
  birthdayAt                  DateTime?
  companyPersons              CompanyPerson[]
  contactCommunicationWays    ContactCommunicationWay[]
  contactAddresses            ContactAddress[]
  contactNotes                ContactNote[]
  tasks                       Task[]
  leads                       Lead[]
  opportunities               Opportunity[]
}

model Company {
  id                          String                    @id @default(uuid())
  createdAt                   DateTime                  @default(now())
  updatedAt                   DateTime                  @updatedAt
  externalId                  String?
  name                        String?
  name2                       String?
  customerId                  String?
  taxId                       String?
  vatId                       String?
  companyPersons              CompanyPerson[]
  contactCommunicationWays    ContactCommunicationWay[]
  contactAddresses            ContactAddress[]
  contactNotes                ContactNote[]
  timeTrackingActivities      TimeTrackingActivity[]
  tasks                       Task[]
  leads                       Lead[]
  opportunities               Opportunity[]
  quotes                      Quote[]
}

model CompanyPerson {
  createdAt     DateTime      @default(now())
  main          Boolean       @default(false)
  role          String?
  personId      String
  person        Person        @relation(fields: [personId], references: [id], onDelete: Cascade)
  companyId     String
  company       Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  @@id([personId, companyId])
}

// --- CommunicationWay

enum ContactCommunicationWayType {
  PHONE
  EMAIL
  WEB
}

enum ContactCommunicationWayCategory {
  INVOICING
  WORK
  FAX
  MOBILE
  AUTOBOX
  NEWSLETTER
  PRIVAT
  NONE
}

model ContactCommunicationWay {
  id              String                            @id @default(uuid())
  createdAt       DateTime                          @default(now())
  updatedAt       DateTime                          @updatedAt
  type            ContactCommunicationWayType
  category        ContactCommunicationWayCategory
  value           String?
  personId        String?
  person          Person?                           @relation(fields: [personId], references: [id], onDelete: Cascade)
  companyId       String?
  company         Company?                          @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

// --- Address

enum ContactAddressCategory {
  HEADQUARTER
  INVOICE
  WORK
  DELIVERY
  PICKUP
  PRIVAT
  NONE
}

model ContactAddress {
  id              String                  @id @default(uuid())
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt
  category        ContactAddressCategory
  address         String?
  address2        String?
  address3        String?
  address4        String?
  zipCode         String?
  city            String?
  countryId       String
  country         Country                 @relation(fields: [countryId], references: [isoCode])
  personId        String?
  person          Person?                 @relation(fields: [personId], references: [id], onDelete: Cascade)
  companyId       String?
  company         Company?                @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model Country {
  isoCode           String            @id
  contactAddresses  ContactAddress[]
}

// --- Note

enum ContactNoteType {
  NOTE
  CALL
  MEETING
  OTHER
}

model ContactNote {
  id              String            @id @default(uuid())
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  type            ContactNoteType   @default(NOTE)
  timestamp       DateTime?
  content         String
  personId        String?
  person          Person?           @relation(fields: [personId], references: [id], onDelete: Cascade)
  companyId       String?
  company         Company?          @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

// --- Time Tracking

model TimeTrackingActivity {
  id              String            @id @default(uuid())
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  userId          String
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  from            DateTime
  to              DateTime?
  description     String?
  companyId       String?
  company         Company?          @relation(fields: [companyId], references: [id], onDelete: Cascade)
  exportedAt      DateTime?
}

// --- Task

enum TaskType {
  CALL
  MAIL
  ACTION
  OTHER
}

model Task {
  id              String            @id @default(uuid())
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  type            TaskType
  name            String
  content         String?
  startAt         DateTime?
  dueDateAt       DateTime?
  doneAt          DateTime?
  userId          String
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId       String?
  company         Company?          @relation(fields: [companyId], references: [id], onDelete: SetNull)
  personId        String?
  person          Person?           @relation(fields: [personId], references: [id], onDelete: SetNull)
  leadId          String?
  lead            Lead?             @relation(fields: [leadId], references: [id], onDelete: SetNull)
  opportunityId   String?
  opportunity     Opportunity?      @relation(fields: [opportunityId], references: [id], onDelete: SetNull)
}

// --- Campaign

model Campaign {
  id                    String            @id @default(uuid())
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  alias                 String            @unique
  name                  String
  shortDescription      String?
  allowPublicCreation   Boolean           @default(false)
  leads                 Lead[]
}

// --- Lead

model LeadStatus {
  id              String            @id @default(uuid())
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  alias           String            @unique
  name            String
  default         Boolean           @default(false)
  order           Int
  leads           Lead[]
}

model Lead {
  id              String            @id @default(uuid())
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  firstname       String?
  familyname      String?
  companyName     String?
  jobTitle        String?
  email           String?
  phoneNumber     String?
  mobileNumber    String?
  attrs           Json              @default("{}")
  note            String?
  internalNote    String?
  ownerId         String?
  owner           User?             @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  leadStatusId    String
  leadStatus      LeadStatus        @relation(fields: [leadStatusId], references: [id])
  companyId       String?
  company         Company?          @relation(fields: [companyId], references: [id], onDelete: SetNull)
  personId        String?
  person          Person?           @relation(fields: [personId], references: [id], onDelete: SetNull)
  campaignId      String?
  campaign        Campaign?         @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  tasks           Task[]
  opportunities   Opportunity[]
}

// --- Opportunity

model OpportunityStage {
  id                      String                @id @default(uuid())
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  alias                   String                @unique
  name                    String
  default                 Boolean               @default(false)
  order                   Int
  opportunities           Opportunity[]
}

enum OpportunityStatus {
  OPEN
  WON
  LOST
}

enum OpportunityRecurringUnit {
  DAILY
  WEEKLY
  MONTHLY
  QUARTERLY
  HALF_YEARLY
  ANNUALLY
}

model Opportunity {
  id                      String                      @id @default(uuid())
  createdAt               DateTime                    @default(now())
  updatedAt               DateTime                    @updatedAt
  name                    String
  description             String?
  amount                  Float                       @default(0)
  recurringAmount         Float                       @default(0)
  recurringCount          Float                       @default(0)
  recurringUnit           OpportunityRecurringUnit?
  probabilityPercent      Float                       @default(0)
  status                  OpportunityStatus           @default(OPEN)
  opportunityStageId      String
  opportunityStage        OpportunityStage            @relation(fields: [opportunityStageId], references: [id])
  companyId               String?
  company                 Company?                    @relation(fields: [companyId], references: [id], onDelete: SetNull)
  personId                String?
  person                  Person?                     @relation(fields: [personId], references: [id], onDelete: SetNull)
  leadId                  String?
  lead                    Lead?                       @relation(fields: [leadId], references: [id], onDelete: SetNull)
  ownerId                 String?
  owner                   User?                       @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  tasks                   Task[]
} 

// --- Quote 

enum QuoteStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
}

model Quote {
  id                      String                      @id @default(uuid())
  createdAt               DateTime                    @default(now())
  updatedAt               DateTime                    @updatedAt
  status                  QuoteStatus                 @default(DRAFT)
  quoteId                 String                      @unique
  quoteDate               DateTime
  quoteValidUntil         DateTime?
  introText               String?
  outroText               String?
  subtotal                Float
  tax                     Float
  total                   Float
  companyId               String
  company                 Company                     @relation(fields: [companyId], references: [id])
  ownerId                 String?
  owner                   User?                       @relation(fields: [ownerId], references: [id])
  quoteItems              QuoteItem[]
}

model QuoteItem {
  id                      String                      @id @default(uuid())
  createdAt               DateTime                    @default(now())
  updatedAt               DateTime                    @updatedAt
  quotePosition           Int
  title                   String
  description             String?
  quantity                Float
  unit                    String?
  price                   Float
  taxRate                 Float
  subtotal                Float
  tax                     Float
  total                   Float
  quoteId                 String
  quote                   Quote                       @relation(fields: [quoteId], references: [id], onDelete: Cascade)
}
